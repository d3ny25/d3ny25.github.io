---
export interface TechItem {
  name: string;
  icon: string;
}

export interface Props {
  title: string;
  description: string;
  github: string;
  tech: TechItem[];
  image?: string;
}

const { title, description, github, tech, image } = Astro.props;
---

<div class="bg-white shadow-lg rounded-lg p-6 border border-gray-200 hover:shadow-xl transition-transform transform hover:scale-[1.02] duration-200 flex flex-col justify-between">
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover rounded-md mb-4"
    />
  )}

  <div>
    <h3 class="text-2xl font-semibold mb-2 text-gray-800">{title}</h3>
    <p class="text-gray-600 mb-6">{description}</p>

    <div class="flex flex-wrap justify-center gap-6 mb-6">
      {tech.map((t) => (
        <div class="flex flex-col items-center">
          <img src={t.icon} alt={t.name} class="w-10 h-10 mb-2" />
          <span class="text-gray-700 text-sm font-medium">{t.name}</span>
        </div>
      ))}
    </div>
  </div>

  <div class="text-center mt-auto">
    <a
      href={github}
      target="_blank"
      class="inline-block bg-linear-to-r from-blue-600 to-indigo-600 text-white font-semibold px-6 py-2 rounded-lg shadow-md hover:shadow-lg hover:scale-105 transition-all duration-200"
    >
      ðŸ”— Ver en GitHub
    </a>
  </div>
</div>
