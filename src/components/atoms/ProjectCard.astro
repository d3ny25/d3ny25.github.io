---
export interface TechItem {
  name: string;
  icon: string;
}

export interface Props {
  title: string;
  description: string;
  github: string;
  tech: TechItem[];
  image?: string;
}

const { title, description, github, tech, image } = Astro.props;
---

<div class="flex flex-col bg-gray-900 border border-gray-800 rounded-2xl p-6 hover:shadow-lg hover:shadow-indigo-500/10 transition-all duration-300 w-full h-full">
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover rounded-md mb-4"
    />
  )}

  <div class="flex flex-col grow">
    <h3 class="text-xl font-semibold text-indigo-300 mb-2 text-center">{title}</h3>
    <p class="text-gray-400 text-sm leading-relaxed text-center mb-4">
      {description}
    </p>

    <div class="flex flex-wrap justify-center gap-4 mb-6">
      {tech.map((t) => (
        <div class="flex flex-col items-center w-16 text-center">
          <img src={t.icon} alt={t.name} class="w-10 h-10 mb-1" />
          <span class="text-gray-400 text-xs">{t.name}</span>
        </div>
      ))}
    </div>
  </div>

  <div class="mt-auto text-center">
    <a
      href={github}
      target="_blank"
      class="inline-block bg-linear-to-r from-blue-600 to-indigo-600 text-white font-semibold px-6 py-2 rounded-lg shadow-md hover:shadow-lg hover:scale-105 transition-all duration-200"
    >
      ðŸ”— Ver en GitHub
    </a>
  </div>
</div>
