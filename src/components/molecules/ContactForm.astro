<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Cast correcto para TypeScript
    const form = document.getElementById(
      "contactForm",
    ) as HTMLFormElement | null;
    const statusMessage = document.getElementById(
      "statusMessage",
    ) as HTMLElement | null;

    if (!form || !statusMessage) return;

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const data = new FormData(form);

      try {
        const response = await fetch(
          "https://script.google.com/macros/s/AKfycbxtpsUQUg1nNHLGBfMgPvNTjeh4uTDIWkjJJ8cfp_22juBseht2I9VHzUhJBoQIfBay/exec",
          {
            method: "POST",
            body: data,
          },
        );

        if (!response.ok) throw new Error("Error en la peticiÃ³n");

        statusMessage.classList.remove("hidden");
        statusMessage.textContent = "âœ… Formulario enviado con Ã©xito.";

        form.reset(); // <-- ya no marca error
      } catch (err) {
        statusMessage.classList.remove("hidden");
        statusMessage.textContent =
          "âŒ Hubo un error al enviar. Intenta de nuevo.";
      }
    });
  });
</script>
